{
  "name": "ronvalstarnl",
  "author": "Ron Valstar",
  "version": "0.5.66",
  "type": "module",
  "license": "MIT",
  "repository": "github:sjeiti/ronvalstarnl",
  "description": "ste",
  "scripts": {
    "start": "run-p build serve write dev:less build:tags",
    "dev:less": "chokidar \"src/*.less\" -c \"npm run build:less\"",
    "build": "run-s clean build:less build:tags \"webpack -- --env development --watch\"",
    "build:prod": "run-s clean build:less build:unzip build:raw build:json build:search build:tags build:icons \"webpack -- --env production\" build:sitemap build:rss build:prerender",
    "build:prodd": "run-s clean build:less build:unzip build:raw build:json build:tags \"webpack -- --env production\" build:sitemap build:rss build:prerender",
    "build:proddd": "run-s clean build:less build:unzip build:raw build:json build:tags \"webpack -- --env production\" build:sitemap build:rss",
    "build:unzip": "unzip src/data/icomoon.zip temp/icomoon",
    "build:json": "node task/markdown2json",
    "build:search": "node task/buildSearch",
    "build:sitemap": "node task/buildSitemap --target dist",
    "build:tags": "node task/buildTags --target dist/data/json",
    "build:tags:watch": "npm run build:tags & chokidar \"src/data/markdown/fortpolio_*.md\" -c \"npm run build:tags\"",
    "build:rss": "node task/buildRSS --target dist",
    "build:less": "run-s build:less:glob build:less:compile",
    "build:less:glob": "node task/lessGlob",
    "build:less:compile": "lessc src/style/screen.less dist/screen.css",
    "build:icons": "node task/icons --source temp/icomoon/SVG/logo.svg --target ./dist/static/icon --sizes 16,32,180",
    "build:raw": "node task/raw2js.js --src temp/icomoon/symbol-defs.svg src/static/svg/client-symbol-defs.svg src/static/svg/prizes-symbol-defs.svg --target src/js/utils/svg.js",
    "build:prerender": "node task/prerender.js",
    "write": "chokidar \"src/data/markdown/*.md\" -c \"npm run build:json\"",
    "write:future": "grep -rlw src/data/markdown/* -e 9999-99-99",
    "write:futurew": "findstr 9999 src/data/markdown/* 2>nul",
    "webpack": "npx webpack --config webpack.config.js",
    "clean": "del-cli dist -f",
    "serve": "node task/serve dist 7047",
    "serve:temp": "node task/serve temp 7777",
    "lint": "eslint src/js/**/*.js",
    "lint:fix": "eslint src/js/**/*.js --fix",
    "test": "echo \"Todo: implement tests\"",
    "build:test": "npx webpack --config webpack.test.config.js --env.development",
    "build:test:watch": "npm run build:test & chokidar \"src/**/*.*\" -c \"npm run build:test\""
  },
  "dependencies": {
    "@emmetio/expand-abbreviation": "^0.7.3",
    "docx": "^8.0.4",
    "experiments": "github:Sjeiti/experiment",
    "file-saver": "^2.0.5",
    "gsap": "^3.6.0",
    "jspdf": "^2.5.1",
    "prismjs": "^1.27.0",
    "state-signals": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.23.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-function-bind": "^7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/preset-env": "^7.12.13",
    "adm-zip-cli": "^1.0.0",
    "babel-loader": "^8.2.2",
    "babel-preset-babili": "0.0.12",
    "babel-preset-minify": "^0.5.1",
    "body-parser": "^1.19.0",
    "commander": "^7.2.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-properties-values": "^1.0.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.19.0",
    "express": "^4.19.2",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "html-loader": "^5.0.0",
    "html-minifier": "^4.0.0",
    "husky": "^8.0.3",
    "jsdom": "^24.1.0",
    "less": "^4.1.1",
    "marked": "^4.0.16",
    "mkdirp": "^1.0.4",
    "next-version": "^0.11.7",
    "node-fetch": "^3.1.1",
    "node-html-parser": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "open": "^7.4.0",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "serve-static": "^1.14.1",
    "sharp": "^0.33.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.21.1",
    "webpack-cli": "^4.5.0",
    "webpack-watch-files-plugin": "^1.2.1",
    "xmldom": "^0.6.0",
    "yorkie": "^2.0.0"
  },
  "optionalDependencies": {
    "fsevents": "ignore"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "_engines": {
    "node": "^20.11.1",
    "npm": "^10.2.4"
  }
}
